{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"**/*.{ts,js,json,md,yaml,yml}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --config jest.unit.config.js --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:firestore": "jest --testPathPattern=firestore",
    "test:seed": "jest --testPathPattern=seed",
    "test:indexes": "jest --testPathPattern=indexes",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:firestore",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "seed": "npm run build && node lib/scripts/seed.js",
    "seed:dev": "npm run build && firebase emulators:exec --only firestore 'node lib/scripts/seed.js'",
    "seed:storage": "npm run build && node lib/scripts/seedStorage.js",
    "seed:storage:dev": "npm run build && firebase emulators:exec --only storage 'node lib/scripts/seedStorage.js'",
    "emulators": "firebase emulators:start --only firestore,auth,storage,functions",
    "emulators:test": "firebase emulators:exec --only firestore,auth,storage,functions 'npm test'"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "ioredis": "^5.7.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase": "^10.7.1",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.3"
  },
  "private": true
}
