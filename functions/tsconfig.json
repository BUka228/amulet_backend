{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
  ,
  "exclude": [
    "src/__tests__/**"
  ]
}
